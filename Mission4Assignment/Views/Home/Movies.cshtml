@{
    ViewData["Title"] = "Movies";
}
@model Mission4Assignment.Models.Movie
<div class="text-center">
    <h2 class="display-4">Movie Database</h2>
</div>
<div class="d-flex justify-content-center">
    <form method="post">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" type="text" />
        <br/>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" />
        <br/>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" type="text" />
        <br/>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" type="text"/>
        <br/>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br/>
        <label asp-for="LentTo">Lent To:</label>
        <input type="text" asp-for="LentTo" />
        <br/>
        <label asp-for="Notes">Notes:</label>
        <input type="text" asp-for="Notes" />
        <br/>
        <div class="d-flex justify-content-center">
            <input type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>
